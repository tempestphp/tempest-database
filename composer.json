{
    "name": "tempest/database",
    "description": "The component responsible for database interaction in the Tempest framework.",
    "license": "MIT",
    "minimum-stability": "dev",
    "require": {
        "php": "^8.4",
        "ext-pdo": "*",
        "tempest/container": "1.0.2",
        "tempest/event-bus": "1.0.2",
        "tempest/mapper": "1.0.2",
        "tempest/intl": "1.0.2",
        "tempest/support": "1.0.2"
    },
    "autoload": {
        "psr-4": {
            "Tempest\\Database\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tempest\\Database\\Tests\\": "tests"
        }
    }
}
